{
  "extends": "react-app",
  "globals": {
    "chrome": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "no-var": "error",
    "no-trailing-spaces": "error",
    "no-unused-vars": "warn"
  }
}